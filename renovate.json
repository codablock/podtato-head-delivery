{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":gitSignOff",
    "schedule:nonOfficeHours",
    ":semanticCommitTypeAll(deps)",
    ":semanticCommitScope()",
    "group:monorepos",
    ":automergePatch"
  ],
  "addLabels": [
    "dependencies"
  ],
  "cloneSubmodules": true,
  "prConcurrentLimit": 15,
  "stabilityDays": 3,
  "timezone": "Europe/Vienna",
  "postUpdateOptions": [
    "gomodTidy",
    "gomodMassage"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "(^|\\/)Makefile$",
        "(^|\\/)Dockerfile",
        "(^|\\/).*\\.ya?ml$",
        "(^|\\/).*\\.toml$",
        "(^|\\/).*\\.sh$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)\\s.*?_VERSION ?(\\??=|\\: ?) ?\\\"?(?<currentValue>.+?)?\\\"?\\s"
      ]
    }
  ],
  "kubernetes": {
    "fileMatch": [
      "examples\\/.*\\.ya?ml$",
      "test\\/.*\\.ya?ml$"
    ]
  }
}